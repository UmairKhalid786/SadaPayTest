<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/basic_padding"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatarIv"
        android:layout_marginRight="@dimen/basic_padding"
        android:layout_marginTop="6dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="@dimen/basic_padding"
        android:contentDescription="@string/todo" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTv"
                android:text="test1234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/repoTv"
                android:text="Repo123"
                android:layout_marginTop="@dimen/mini_margin"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descTv"
                android:text="Description abc"
                android:layout_marginTop="@dimen/mini_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/tagsLl"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/mini_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lanTv"
                    android:text="Python"
                    android:layout_marginRight="@dimen/basic_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/basic_padding"
                    />

                <TextView
                    android:id="@+id/starsTv"
                    android:text="115"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>